# 开发环境配置模板
# 复制此文件为 .env 并修改相应值

# 服务器配置
SIAPP_ADDR=:8080

# 数据库配置
# 数据库类型: sqlite (默认) 或 postgres
SIAPP_DATABASE_TYPE=sqlite
# SQLite 配置 (当 SIAPP_DATABASE_TYPE=sqlite 时使用)
SIAPP_DATABASE_PATH=./data/siapp.db

# PostgreSQL 配置 (当 SIAPP_DATABASE_TYPE=postgres 时使用)
# SIAPP_DB_HOST=localhost
# SIAPP_DB_PORT=5432
# SIAPP_DB_USER=siapp
# SIAPP_DB_PASSWORD=your-postgres-password
# SIAPP_DB_NAME=siapp
# SIAPP_DB_SSLMODE=disable

# JWT配置
JWT_SECRET_KEY=your-development-secret-key-change-this
JWT_TOKEN_DURATION=24h

# CORS配置 (开发环境)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:10086

# 日志级别
LOG_LEVEL=debug

# 邮件配置 (未来功能)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=your-email@gmail.com
# FROM_NAME=社保数据整合系统

# 系统配置
APP_NAME=社保数据整合系统
APP_VERSION=1.0.0
APP_ENV=development
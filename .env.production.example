# 生产环境配置模板
# 复制此文件为 .env.production 并修改相应值

# 服务器配置
SIAPP_ADDR=:8080

# 数据库配置
# 数据库类型: sqlite (当前) 或 postgres (推荐用于生产环境)
SIAPP_DATABASE_TYPE=sqlite
# SQLite 配置 (当 SIAPP_DATABASE_TYPE=sqlite 时使用)
SIAPP_DATABASE_PATH=/app/data/siapp.db

# PostgreSQL 配置 (当 SIAPP_DATABASE_TYPE=postgres 时使用)
# SIAPP_DB_HOST=postgres
# SIAPP_DB_PORT=5432
# SIAPP_DB_USER=siapp
# SIAPP_DB_PASSWORD=your-secure-postgres-password
# SIAPP_DB_NAME=siapp
# SIAPP_DB_SSLMODE=require

# JWT配置 - 生产环境必须使用强密钥
JWT_SECRET_KEY=kVP0G7mtHX15Yx7ofbd1VbiA9T0HW+zA6BUCqHnvHDZINe7LVjE5s0EdXHZC8m8PnznvJ9gghyZWmAElHqpO2g==
JWT_TOKEN_DURATION=12h

# CORS配置 - 生产环境严格限制
ALLOWED_ORIGINS=https://shebao.mozui.cn,https://your-domain.com

# 日志级别
LOG_LEVEL=info

# 邮件配置 (生产环境邮件功能)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASSWORD=your-production-app-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=社保数据整合系统

# 系统配置
APP_NAME=社保数据整合系统
APP_VERSION=1.0.0
APP_ENV=production

# 安全配置
SECURE_COOKIE=true
HTTPS_ONLY=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s


# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# 文件存储配置
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=/app/uploads